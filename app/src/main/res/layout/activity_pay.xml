<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jkwusu.voipbase.PayActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sumbit"
        android:id="@+id/btn_sum_money"
        android:layout_marginBottom="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/et_money"
        android:layout_alignStart="@+id/et_money" />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_money"
        android:layout_above="@+id/btn_sum_money"
        android:layout_alignLeft="@+id/et_showbalance"
        android:layout_alignStart="@+id/et_showbalance"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="转账金额："
        android:id="@+id/textView3"
        android:layout_above="@+id/btn_sum_money"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_usernameto"
        android:layout_above="@+id/textView3"
        android:layout_marginBottom="65dp"
        android:layout_alignLeft="@+id/et_money"
        android:layout_alignStart="@+id/et_money"
        android:layout_alignRight="@+id/et_money"
        android:layout_alignEnd="@+id/et_money" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="转给："
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/et_usernameto"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前余额"
        android:textSize="24dp"
        android:id="@+id/et_showbalance"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

</RelativeLayout>
